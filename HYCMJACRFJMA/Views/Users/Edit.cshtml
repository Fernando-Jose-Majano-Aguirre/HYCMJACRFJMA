@model HYCMJACRFJMA.Models.Users

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mt-4">Editar Usuario</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Datos del Usuario</h4>
        <hr />

        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group row">
                <label for="Nombre" class="col-sm-2 col-form-label">Nombre</label>
                <div class="col-sm-10">
                    <input asp-for="Nombre" class="form-control" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label for="Apellido" class="col-sm-2 col-form-label">Apellido</label>
                <div class="col-sm-10">
                    <input asp-for="Apellido" class="form-control" required />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label for="Estatus" class="col-sm-2 col-form-label">Estatus</label>
                <div class="col-sm-10">
                    <select asp-for="Estatus" class="form-control" required>
                        <option value="1">Activo</option>
                        <option value="2">Inactivo</option>
                    </select>
                    <span asp-validation-for="Estatus" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label for="Rol" class="col-sm-2 col-form-label">Rol</label>
                <div class="col-sm-10">
                    <input asp-for="Rol" class="form-control" required />
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Editar</button>
                    <a class="btn btn-secondary" asp-action="Index">Regresar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
